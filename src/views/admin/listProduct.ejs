<!DOCTYPE html>
<html lang="es">
<%- include("../partials/head", {title: 'Lista de jueguetes' }) %>

    <body>
        <%- include("../partials/dashbar") %>
            <main>
                <div class="container">
                    <div class="row">
                        <h2 class="text-center">LISTADO DE PRODUCTOS</h2>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="dataTables_wrapper form-inline dt-bootstrap">
                                <div class="row mb-4">
                                    <div class="col-sm-6 ">
                                        <div class="d-flex align-items-center">
                                            <label for="datatable_length">Mostrar </label>
                                            <select name="datatable_length" aria-controls="datatable"
                                                class="form-control input-sm custom-select-sm">
                                                <option value="10">10</option>
                                                <option value="25">25</option>
                                                <option value="50">50</option>
                                                <option value="100">100</option>
                                            </select>
                                            <label for="datatable_length" class="ml-2"> registros</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="d-flex align-items-center">
                                            <label>Buscar:</label>
                                            <input type="search" class="form-control input-sm" placeholder=""
                                                aria-controls="datatable">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <table class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th class="text-center">ID</th>
                                        <th class="text-center">IMAGEN<img src="" alt=""></th>
                                        <th class="text-center">PRODUCTO</th>
                                        <th class="text-center">PRECIO</th>
                                        <th class="text-center">STOCK</th>
                                        <th class="text-center">DESCRIPCIÓN</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th class="text-center">ID</th>
                                        <th class="text-center">IMAGEN<img src="" alt=""></th>
                                        <th class="text-center">PRODUCTO</th>
                                        <th class="text-center">PRECIO</th>
                                        <th class="text-center">STOCK</th>
                                        <th class="text-center">DESCRIPCIÓN</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% products.forEach(p=> { %>
                                        <tr>
                                            </td>
                                            <td class="text-center align-middle">
                                                <%=p.id%>
                                            </td>
                                            <td class="text-center align-middle">

                                                <img src="/images/products/<%= p.firstImg !== "" ? p.firstImg : 'default-image.jpg' %>"
                                                    alt="" class="no_img">
                                            </td>
                                            <td class="text-center align-middle">
                                                <%=p.name%>
                                            </td>
                                            <td class="text-center align-middle">
                                                <%=p.price%>
                                            </td>

                                            <td class="text-center align-middle">
                                                <%=p.stock%>
                                            </td>
                                            <td>
                                                <%=p.description%>
                                            </td>
                                            <td class="text-center align-middle"><a
                                                    href="/admin/editar-producto/<%= p.id %>" class="btn"><i
                                                        class="fa-regular fa-pen-to-square text-success"></i></a>
                                            </td>
                                            <td class="text-center align-middle">
                                                <form action="/admin/eliminar-producto/<%= p.id %>?_method=DELETE"
                                                    method="POST">

                                                    <button type="submit" class="btn"><i
                                                            class="fa-solid fa-trash-can text-danger"></i></button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }); %>

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-sm-6">
                            <div class="dataTables_info" id="datatable_info" role="status" aria-live="polite">Mostrando
                                1 a <%= products.length %> de <%= products.length %> registros
                            </div>
                        </div>
                        <div class="col-sm-6 d-flex justify-content-end">
                            <nav aria-label="...">
                                <ul class="pagination">
                                    <li class="page-item disabled">
                                        <span class="page-link">Anterior</span>
                                    </li>
                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item active" aria-current="page">
                                        <span class="page-link">2</span>
                                    </li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">Siguiente</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </main>
            <!-- scripts -->
            <%- include("../partials/scripts") %>
                <!-- /scripts -->
    </body>

</html>