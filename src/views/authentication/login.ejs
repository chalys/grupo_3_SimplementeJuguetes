<!DOCTYPE html>
<html lang="es">
<%- include("../partials/head",{title:'Ingresar'}) %>

    <body>

        <!-- Header -->
        <%- include("../partials/header") %>

            <!--     MAIN    -->
            <main class="main-login">
                <img class="fondo" src="../images/other/fondoPrueba.png" alt="fondo">
                <div class="contenido">
                    <form action="/autenticacion/login" method="post" class="form">
                        <img src="/images/logo/panda-logo.png" alt="logo" class="logo-login">
                        <div class="login-h2">
                            <h2>Bienvenido</h2>
                        </div>
                        <div class="login-nombre">
                            <label class="text-name" for="nombre">Nombre de usuario</label>
                            <input type="text" name="userName" id="nombre" class="input-ln">
                        </div>
                        <div class="login-contrasenia">
                            <label class="text-password" for="password">Contraseña</label>
                            <input type="password" id="password" class="input-login" name="password">
                        </div>
