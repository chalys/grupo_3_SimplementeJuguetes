<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head") %>

<body>
    <!-- Header -->

    <%- include("./partials/header") %>

    <main class="main-detail">

        <!--PRODUCTO PRINCIPAL-->
        <section class="main-product">
            <div class="container-left">
                <figure class="container-left-up">
                    <img class="main-photo" src="/imagen/<%= p.firstImg %>" alt="Imagen del producto">
                </figure>
                <div class="container-left-down">
                    <% for( let i = 0; i < 4; i++ ) { %>
                        <img class="secondary-photo" src="/imagen/<%= p.secondImg[i]?p.secondImg[i]:'unnamed.jpg' %>" alt="Imagen del producto">
                        <% } %>
             
                </div>
            </div>
            <div class="container-right">
                <div class="container-right-up">
                    <h1 class="cr-description"><%= p.name %></h1>
                    <p class="cr-article cr-details">Número de Articulo: <%= p.id %></p>
                    <h2 class="cr-price cr-details">$<%= p.price %></h2>
        
                    <p class="cr-payment cr-details">Metodos de pago</p>
                    <figure class="logo-cards">
                        <i class="fa-brands fa-cc-mastercard custom-cards"></i>
                        <i class="fa-brands fa-cc-paypal custom-cards""></i>
                    <i class=" fa-brands fa-cc-visa custom-cards""></i>
                    </figure>
                </div>
                <div class="container-right-down">
                    <!-- Characteristics -->
                    <div class="cr-title-characteristics">
                        <h2>Caracteristicas</h2>
                    </div>
                    <div class="cr-description-characteristics">
                        <p class="cr-text-red">Marca:<span class="cr-text-gris"><%= p.mark %></span></p>
                        <p class="cr-text-red">SKU:<span class="cr-text-gris"><%= p.sku %></span></p>
                        <p class="cr-text-red">Disponibilidad:<span class="cr-text-gris"><%= p.available? "En stock" : "Sin stock" %></span></p>
                        <p class="cr-text-red">Edad recomendada:<span class="cr-text-gris"><%= p.minAge %> años</span></p>
                    </div>
                    <!-- Amount -->
                    <div class="cr-amount">
                        <p class="lbl-amount" for="">CANTIDAD</p>
                        <div class="lbl-amount-up-down">

                            <button onclick="decrementar()">-</button>
                            <input type="number" id="numero" value="0" size="3" readonly>
                            <button onclick="incrementar()">+</button>
                            
                            <script>
                              function incrementar() {
                                document.getElementById('numero').stepUp();
                              }
                              
                              function decrementar() {
                                document.getElementById('numero').stepDown();
                              }
                            </script>

                        </div>
                    </div>
                    <!-- Button -->
                    <div class="cr-button">
                        <button type="submit" class="btn btn-custom-white">AGREGAR AL CARRITO</button>
                        <button type="submit" class="btn btn-custom-green">COMPRAR AHORA</button>
                    </div>
                </div>
            </div>
        </section>

        <!--PRODUCTOS RELACIONADOS-->
        <section class="related-products">
            <div class="container-related-products">
                <div class="rp-title-products">
                    <h2>Productos Relacionados</h2>
                </div>
                <section class="rp-products">
                    <% for( let i = 0; i < ps.length; i++ ) { %>
                        <article class="rp-product">
                            <a class="rp-product-link" href="/detalle/<%= ps[i].id %>"><img class="rp-product-img" src="<%= ps[i].firstImg %>"
                                    alt="Producto <%= ps[i].id %>"></a>
                            <h3 class="rp-product-title"><%= ps[i].name %></h3>
                            <p class="rp-product-price">$<%= ps[i].price %></p>
                        </article>
                    <% } %>

                </section>
            </div>
        </section>

        <!--CARACTERISTICAS DEL PRODUCTO-->
        <section class="all-features">
            <div class="container-all-features">
                <div class="af-title">
                    <h2>Caracteriscas del Producto</h2>
                </div>
                <section class="all-table">
                    <table class="toy-information">
                        <tr>
                            <td class="esquina1">Fabricante</td>
                            <td class="esquina2"><%= p.manufacturer %></td>
                        </tr>

                        <tr>
                            <td>Linea</td>
                            <td><%= p.line %></td>
                        </tr>

                        <tr>
                            <td>Coleccion</td>
                            <td><%= p.colection %></td>
                        </tr>

                        <tr>
                            <td>Personaje</td>
                            <td><%= p.character %></td>
                        </tr>

                        <tr>
                            <td class="esquina3">Version del personaje</td>
                            <td class="esquina4"><%= p.characterVersion %></td>
                        </tr>
                    </table>

                    <table class="more-information">
                        <tr>
                            <td class="esquina1">Edad minima recomendada</td>
                            <td class="esquina2"><%= p.minAge %> años</td>
                        </tr>

                        <tr>
                            <td>Altura</td>
                            <td><%= p.height %></td>
                        </tr>

                        <tr>
                            <td>Profundidad</td>
                            <td><%= p.depth %></td>
                        </tr>

                        <tr>
                            <td>Ancho</td>
                            <td><%= p.width %></td>
                        </tr>

                        <tr>
                            <td>Materiales</td>
                            <td><%= p.materials %></td>
                        </tr>

                        <tr>
                            <td>Es articulada</td>
                            <td><%= p.articulated? "Si":"No" %></td>
                        </tr>

                        <tr>
                            <td>Es coleccionable</td>
                            <td><%= p.collectable? "Si":"No" %></td>
                        </tr>

                        <tr>
                            <td>Incluye accesorios</td>
                            <td><%= p.accessories? "Si":"No" %></td>
                        </tr>

                        <tr>
                            <td>Es bobblehead</td>
                            <td><%= p.bobblehead? "Si":"No" %></td>
                        </tr>
                        <tr>
                            <td class="esquina3">Escala</td>
                            <td class="esquina4"><%= p.scale %></td>
                        </tr>
                    </table>
                </section>
            </div>
        </section>

        <section class="description">
            <div class="container-description">
                <div class="rp-title-description">
                    <h2>Descripcion</h2>
                </div>
                <div>
                    <p class="paragraph"><%= p.description %>
                    </p>
                </div>
            </div>


        </section>

    </main>
    <!-- Footer -->
    
    <%- include("./partials/footer") %>

    <!-- Script Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>